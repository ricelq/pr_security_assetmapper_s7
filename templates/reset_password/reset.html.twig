{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}

    <section id="page-reset-password" class="bg-gray-50 dark:bg-gray-900">
        <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
            <a href="{{ path('app_home') }}" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
                <img class="w-8 h-8 mr-2" src="{{ asset('images/logo-square.svg') }}" alt="logo">
                {{ app_company }}
            </a>
            <div class="w-full p-6 bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md dark:bg-gray-800 dark:border-gray-700 sm:p-8">
                <h1 class="mb-1 text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                    Reset your password
                </h1>

                {{ form_start(resetForm, {'attr': {'class': 'mt-4 space-y-4 lg:mt-5 md:space-y-5'}}) }}

                {{ form_row(resetForm.plainPassword) }}

                <button type="submit" class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">
                    Reset password
                </button>

                {{ form_end(resetForm) }}
                <br>

                <p class="text-sm font-light text-gray-500 dark:text-gray-400">
                    <a href="{{ path('app_login') }}" class="font-medium text-primary-600 hover:underline dark:text-primary-500">
                        Return to login
                    </a>
                </p>
            </div>

        </div>
    </section>
{% endblock %}
